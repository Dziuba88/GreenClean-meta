mixin navItem(title, url)
  li.navbar--menu__item(class=page == title ? 'active' : '')
    a(href=url)
      span= title
      svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 11")
        path(d="M1 11a1 1 0 0 0 .7-.3L7 5.5 1.7.3A1 1 0 0 0 .3.3a1 1 0 0 0 0 1.3l4 3.9-4 3.9a1 1 0 0 0 0 1.3 1 1 0 0 0 .7.3z")
.navbar
  .container
    button.navbar--show
      svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 16")
        path(d="M0 16v-2h25v2H0zm0-9h25v2H0V7zm0-7h25v2H0V0z")
      span menu
    ul.navbar--menu
      li.navbar--menu__header
        button.navbar--menu__hide
          span Menu
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48")
            path(d="M28.2 24L47.1 5A3 3 0 1 0 42.8 1L24 19.7 5 1A3 3 0 1 0 1 5L19.7 24 1 42.9A3 3 0 1 0 5 47L24 28.2l18.9 18.9a3 3 0 0 0 4.2 0 3 3 0 0 0 0-4.3L28.2 24z")
      +navItem('Home', './')
      +navItem('Our Services', 'services.html')
      +navItem('About Us', 'about.html')
      +navItem('Testimonials', 'testimonials.html')
      +navItem('Portfolio', 'portfolio.html')
      +navItem('Specials', 'specials.html')
      +navItem('Contact Us', 'contacts.html')
