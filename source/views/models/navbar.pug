mixin navItem(title, url)
  li.navbar--menu__item(class=page == title ? 'active' : '')
    a(href=url)
      span= title
      svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 7 11")
        path(d="M1 11a1 1 0 0 0 .7-.3L7 5.5 1.7.3A1 1 0 0 0 .3.3a1 1 0 0 0 0 1.3l4 3.9-4 3.9a1 1 0 0 0 0 1.3 1 1 0 0 0 .7.3z")
